<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:background="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/ll_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image_left_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv_image_left_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv_image_left_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="3dp"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv_image_left_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_launcher" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:background="@mipmap/ic_launcher" />
    </LinearLayout>
</RelativeLayout>