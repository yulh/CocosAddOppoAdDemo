<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_privacy_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26E6E8E7"
            android:gravity="center"
            android:text="更多精品游戏推荐" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/settle_three_icon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/settle_three_icon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_launcher"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/settle_three_icon3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/settle_three_icon4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_launcher"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/settle_three_icon5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>