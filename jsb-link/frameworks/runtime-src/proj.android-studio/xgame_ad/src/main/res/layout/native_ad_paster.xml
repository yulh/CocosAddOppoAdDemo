<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

    <com.heytap.msp.mobad.api.params.NativeAdvanceContainer
        android:id="@+id/native_ad_paster_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/opos_native_512_512_bg_img"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/native_ad_paster_close"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/nativeclose" />

            <ImageView
                android:id="@+id/native_ad_paster_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/native_ad_paster_icon"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/native_ad_paster_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="14dp"

                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="9"
                    android:singleLine="true"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/native_ad_paster_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="13"
                    android:singleLine="true"
                    android:textColor="@color/color_8f8f8f"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <Button
                android:id="@+id/native_ad_paster_bn"
                android:layout_width="67dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="27dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="立即查看"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/native_ad_paster_logo"
                android:layout_width="28dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/opos_native_logo_img" />

        </RelativeLayout>
    </com.heytap.msp.mobad.api.params.NativeAdvanceContainer>

</RelativeLayout>